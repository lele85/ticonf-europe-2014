<Alloy>
	<Window class="container">
		<Label id="title">Venues</Label>
		<View id="notFound">
			<Label>No Venues found</Label>
		</View>
        <View id="networkError">
            <Label>Oooops :(</Label>
        </View>
		<ListView id="venuesList" defaultItemTemplate="template">
            <Templates>
                <ItemTemplate name="template" class="template">
                <View>
                    <Label bindId="name" id="name" />
                </View>
                </ItemTemplate>
            </Templates>
            <ListSection id="venuesSection"></ListSection>
        </ListView>
	</Window>
</Alloy>